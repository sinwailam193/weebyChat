<!doctype html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weeby Chat</title>
  <link rel="stylesheet" href="/style/bootstrap.min.css"> <!-- load bootstrap css -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
  <link rel="stylesheet" type="text/css" href="/production/style.min.css"><!-- load style css minify version -->
  <link rel="shortcut icon" href="http://www.weeby.co/img/index/ico_IDE.png"/>
</head>
<body>
  <div class="container">

    <div class="col-sm-6 col-sm-offset-3">

      <h1><span class="fa fa-sign-in"></span> Signup</h1>

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div> <!-- if there is an error message, it will display it here -->
      <% } %>

      <!-- SIGNUP FORM -->
      <form action="/signup" method="post"> <!-- this sends a post request to the server of the username and password -->
        <div class="form-group">
          <label>Username</label>
          <input type="text" class="form-control" name="username">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
      </form>

      <hr>

      <p>Already have an account? <a href="/login">Login</a></p><!-- this sends user to the signup page -->
      <p>Or go <a href="/">home</a>.</p> <!-- this takes user back to the homepage -->

    </div>

  </div>
</body>
</html>